generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum BorrowedCartStatus {
  BORROWED
  REQUESTED
  RETURNED
}

enum EquipmentAvailabilityEnum {
  AVAILABLE
  UNAVAILABLE
}

enum UserRole {
  STUDENT
  ADMINISTRATOR
}

model User {
  id       String   @id @unique @default(uuid())
  name     String
  email    String   @unique
  password String
  role     UserRole @default(STUDENT)

  borrowedCarts BorrowedCart[]
}

model Equipments {
  id Int @id @unique @default(autoincrement())

  name  String
  image String

  availability EquipmentAvailabilityEnum

  BorrowedCart   BorrowedCart? @relation(fields: [borrowedCartId], references: [id])
  borrowedCartId Int?
}

model BorrowedCart {
  id Int @id @unique @default(autoincrement())

  equipments Equipments[]
  borrowStatus BorrowedCartStatus @default(REQUESTED)

  allotedTime Float
  issuedTime  DateTime @default(now())

  User   User   @relation(fields: [userId], references: [id])
  userId String
}
